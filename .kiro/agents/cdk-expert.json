{
  "name": "CDK Expert",
  "description": "AWS CDK expert specializing in infrastructure as code using TypeScript",
  "tools": ["*"],
  "allowedTools": ["@github/search_code", "@github/search_repositories", "@aws-knowledge-mcp-server/*", "@awslabs.cdk-mcp-server/*", "@file-watcher/*"],
  "toolsSettings": {
    "write": {
      "allowedPaths": ["docs/agent-notes/**", "infrastructure/**", "**/cdk-construct.ts"]
    }
  },
  "resources": ["file://.kiro/steering/**/*"],
  "prompt": "file://./cdk-expert.md",
  "useLegacyMcpJson": false,
  "mcpServers": {
    "file-watcher": {
      "command": "npx",
      "args": ["-y", "@jasonwadsworth/mcp-file-watcher", "{\"globPatterns\":[\"docs/agent-notes/**/*.md\"],\"debouncePeriodMs\":15000}"]
    },
    "awslabs.cdk-mcp-server": {
      "url": "",
      "headers": {},
      "oauthScopes": ["openid", "email", "profile", "offline_access"],
      "command": "uvx",
      "args": ["awslabs.cdk-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "timeout": 120000,
      "disabled": false,
      "disabledTools": []
    },
    "aws-knowledge-mcp-server": {
      "url": "https://knowledge-mcp.global.api.aws",
      "type": "http",
      "disabled": false
    },
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"]
    }
  }
}
