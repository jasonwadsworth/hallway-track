{
  "name": "Lambda Implementer",
  "description": "Serverless backend developer specializing in AWS Lambda functions using TypeScript",
  "tools": ["*"],
  "allowedTools": ["@github/search_code", "@github/search_repositories", "@aws-knowledge-mcp-server/*", "@Context7/*", "@file-watcher/*"],
  "toolsSettings": {
    "write": {
      "allowedPaths": ["docs/agent-notes/**", "infrastructure/lambda/**"]
    }
  },
  "resources": ["file://.kiro/steering/**/*"],
  "prompt": "file://./lambda-implementer.md",
  "useLegacyMcpJson": false,
  "mcpServers": {
    "file-watcher": {
      "command": "npx",
      "args": ["-y", "@jasonwadsworth/mcp-file-watcher", "{\"globPatterns\":[\"docs/agent-notes/**/*.md\"],\"debouncePeriodMs\":15000}"]
    },
    "aws-knowledge-mcp-server": {
      "url": "https://knowledge-mcp.global.api.aws",
      "type": "http",
      "disabled": false
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"],
      "env": {},
      "disabled": false,
      "autoApprove": ["resolve-library-id", "get-library-docs"]
    },
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"]
    }
  }
}
