{
  "name": "Testing Specialist",
  "description": "Testing expert specializing in both unit and integration testing for serverless applications",
  "tools": ["*"],
  "allowedTools": ["@github/search_code", "@github/search_repositories", "@awslabs.frontend-mcp-server/*", "@Context7/*", "@file-watcher/*"],
  "toolsSettings": {
    "write": {
      "allowedPaths": ["docs/agent-notes/**", "**/__tests__/**", "**/*.test.ts", "**/*.spec.ts", "frontend/e2e/**"]
    },
    "execute_bash": {
      "autoAllowReadonly": true,
      "allowedCommands": ["npm test.*", "cd .* && npm test.*"]
    }
  },
  "resources": ["file://.kiro/steering/**/*"],
  "prompt": "file://./testing-specialist.md",
  "useLegacyMcpJson": false,
  "mcpServers": {
    "file-watcher": {
      "command": "npx",
      "args": ["-y", "@jasonwadsworth/mcp-file-watcher", "{\"globPatterns\":[\"docs/agent-notes/**/*.md\"],\"debouncePeriodMs\":15000}"]
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"],
      "env": {},
      "disabled": false,
      "autoApprove": ["resolve-library-id", "get-library-docs"]
    },
    "awslabs.frontend-mcp-server": {
      "command": "uvx",
      "args": ["awslabs.frontend-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": []
    },
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"]
    }
  }
}
